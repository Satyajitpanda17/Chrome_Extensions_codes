{
    "manifest_version": 3,
    "name": "YouTube Video Summarizer",
    "version": "1.0",
    "description": "Summarize YouTube videos using AI.",
    "permissions": ["activeTab", "declarativeContent"],
    "host_permissions": ["http://127.0.0.1:5000/*"],
    "action": {
      "default_title": "Summarise the video",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
  }
  }
  